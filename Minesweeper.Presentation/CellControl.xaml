    </UserControl.Resources>
    
    <UserControl.Content>
        <Button x:Name="tbtnCell" Click="ToggleCell">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Cell.Row, FallbackValue=0}"/>
                <TextBlock Text=","/>
                <TextBlock Text="{Binding Cell.Column, FallbackValue=0}"/>
                <TextBlock Text=":"/>
                <TextBlock Text="{Binding Cell.Number, FallbackValue=0}"/>
            </StackPanel>

            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="0" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Background" Value="AliceBlue" />
                </Style>
            </Button.Style>
            
        </Button>
