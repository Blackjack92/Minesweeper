<UserControl x:Class="Minesweeper.Presentation.CellControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Minesweeper.Presentation"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="0" />
            <Setter Property="Padding" Value="0" />

            <Style.Triggers>
                <DataTrigger Binding="{Binding Cell.IsToggled}" Value="True">
                    <Setter Property="Background" Value="Yellow" />
                </DataTrigger>
            </Style.Triggers>
            <!--<Style.Triggers>
                <DataTrigger>
                    
                </DataTrigger>
            </Style.Triggers>-->
        </Style>
    </UserControl.Resources>

    <UserControl.Content>
            <Button x:Name="tbtnCell" 
                Click="ToggleCell" 
                MouseRightButtonDown="MarkCell">

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Cell.Row, FallbackValue=0}"/>
                    <TextBlock Text=","/>
                    <TextBlock Text="{Binding Cell.Column, FallbackValue=0}"/>
                    <TextBlock Text=":"/>
                    <TextBlock Text="{Binding Cell.Number, FallbackValue=0}"/>
                    <TextBlock Text=";"/>
                    <TextBlock Text="{Binding Cell.Type, FallbackValue=0}"/>
            </StackPanel>
        </Button>
    </UserControl.Content>
</UserControl>
